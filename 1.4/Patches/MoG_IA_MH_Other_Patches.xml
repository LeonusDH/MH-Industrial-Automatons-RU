<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- Edit other MH mods for compatibility -->
	<!-- MH: Military Tiers -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>MH: Military Tiers</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
			<!-- Research Project Changes (Just the Tech Tree itself.) -->
			<!-- ATM_M1Warriors -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/ResearchProjectDef[defName = "ATM_M1Warriors"]/researchViewX</xpath>
				<value><researchViewX>1.00</researchViewX></value></li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ResearchProjectDef[defName = "ATM_M1Warriors"]/researchViewY</xpath>
				<value><researchViewY>4.10</researchViewY></value></li>
			<!-- ATM_M2Bishops -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/ResearchProjectDef[defName = "ATM_M2Bishops"]/researchViewX</xpath>
				<value><researchViewX>4.00</researchViewX></value></li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ResearchProjectDef[defName = "ATM_M2Bishops"]/researchViewY</xpath>
				<value><researchViewY>4.10</researchViewY></value></li>
			<!-- ATM_M3Paladins -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/ResearchProjectDef[defName = "ATM_M3Paladins"]/researchViewX</xpath>
				<value><researchViewX>7.00</researchViewX></value></li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ResearchProjectDef[defName = "ATM_M3Paladins"]/researchViewY</xpath>
				<value><researchViewY>4.10</researchViewY></value></li>
			</operations>
		</match>
	</Operation>
	<!-- MH: Utility Drones -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>MH: Utility Drones</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
			<!-- Research Project Changes (Just the Tech Tree itself.) -->
			<!-- MHUD_SimpleDrones -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/ResearchProjectDef[defName = "MHUD_SimpleDrones"]/researchViewX</xpath>
				<value><researchViewX>1.00</researchViewX></value></li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ResearchProjectDef[defName = "MHUD_SimpleDrones"]/researchViewY</xpath>
				<value><researchViewY>4.65</researchViewY></value></li>
			<!-- MHUD_ComplexDrones -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/ResearchProjectDef[defName = "MHUD_ComplexDrones"]/researchViewX</xpath>
				<value><researchViewX>7.00</researchViewX></value></li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ResearchProjectDef[defName = "MHUD_ComplexDrones"]/researchViewY</xpath>
				<value><researchViewY>4.65</researchViewY></value></li>
			</operations>
		</match>
	</Operation>
    
</Patch>